@model Tuple<Library.Models.Book, Library.Models.BookBorrowed>

@{
    ViewData["Title"] = "Borrow";
}

<h1>Borrow</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Author)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.Author)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.IsAvailable)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.IsAvailable)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Item1.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Item1.Category)
            </dd>
        </dl>

        <div>
            <form asp-action="Borrow" method="post">
                @Html.AntiForgeryToken()

                <input type="hidden" asp-for="Item2.Id" />

                <div class="form-group">
                    <label asp-for="Item2.StartTime">Start Date:</label>
                    <input asp-for="Item2.StartTime" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" disabled />
                </div>

                <div class="form-group">
                    <label asp-for="Item2.EndTime">End Date:</label>
                    <input asp-for="Item2.EndTime" class="form-control" value="@DateTime.Now.AddDays(30).ToString("yyyy-MM-ddTHH:mm:ss")" disabled />
                </div>

                <div class="form-group">
                    <input type="submit" value="Borrow" class="btn btn-primary" />
                </div>
            </form>
        </div>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
